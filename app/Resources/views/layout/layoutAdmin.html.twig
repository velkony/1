<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Greek Hotels{% endblock %}</title>
        <meta name="keywords" content="{% block wordsKeys %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/jqtree.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/datepicker.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="{{ path('hotels') }}">Greek Hotels</a>
                    <div class="nav-collapse collapse">
                        {% render(controller('KvartiriBundle:Hotels:search')) %}
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="span9">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <hr />
        <footer id="footer" class="vspace20">
            <div class="container">
                <div class="row">
                    <div class="span4 offset1">
                        <h4>Information</h4>
                        <ul class="nav nav-stacked">
                            {% render(controller('PagesBundle:Pages:menu')) %}
                        </ul>
                    </div> 

                    <div class="span4">
                        <h4>Address</h4>
                        <p><i class="icon-map-marker"></i>&nbsp;{{ address }}</p>
                    </div>

                    <div class="span2">
                        <h4>Contacts</h4>
                        <p><i class="icon-phone"></i>&nbsp;Phone: {{ phone }}</p>
                        <p><i class="icon-print"></i>&nbsp;Fax: {{ fax }}</p>
                    </div>
                </div>

                <div class="row">
                    <div class="span4">
                        <p>&copy; Copyright {{ "now"|date('Y') }} - gr-hotels.info</p>
                    </div>
                </div>
            </div>
        </footer>	
        <script src="{{ asset('js/jquery-2.1.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/tree.jquery.js') }}"></script>
        <script src="{{ asset('js/functionsTree.js') }}"></script>
        <script src="{{ asset('js/bootstrap-datepicker.js') }}"></script>
        <script src="{{ asset('js/promotionForm.js') }}"></script>
        <script src="{{ asset('js/calendar.js') }}"></script>
        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
        <script src="{{ asset('js/jquery-dateFormat.min.js') }}"></script>
        {#<script src="{{ asset('js/hotelSeasonsForm.js') }}"></script>#}
        {#<script src="{{ asset('js/imagesForm.js') }}"></script>#}
        {#<script src="{{ asset('js/calendarHotelSeason.js') }}"></script>#}
        {#<script src="{{ asset('js/roomSeasonsForm.js') }}"></script>#}




        {#<script src="{{ asset('js/clientsRequestForm.js') }}"></script>#}
        {% block javascripts %}{% endblock %}
    </body>
</html>